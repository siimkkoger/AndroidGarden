<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SoftGreen">

    <Button
        android:id="@+id/buttonConfirmGarden"
        android:layout_width="176dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Confirm Garden"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/etBedName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonConfirmSize"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_light"
        android:text="Confirm Size"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/height"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfirmGarden"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonConfirmGarden"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/width"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="width"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfirmGarden" />

    <EditText
        android:id="@+id/height"
        android:layout_width="106dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="height"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/width"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfirmGarden" />

    <EditText
        android:id="@+id/etBedName"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonConfirmGarden"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="9dp" />

    <Button
        android:id="@+id/buttonPrevious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="reverse"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutGarden" />

    <LinearLayout
        android:id="@+id/linearLayoutGarden"
        android:layout_width="366dp"
        android:layout_height="324dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfirmSize"></LinearLayout>
</android.support.constraint.ConstraintLayout>